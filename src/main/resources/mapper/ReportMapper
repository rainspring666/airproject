<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ReportMapper">

    <select id="get_all_report_info" resultType="com.example.demo.entity.Report">
        select * from report
    </select>

    <insert id="add_report">
        insert into report(report_id, describes, picurl, operate_plan, create_time, validation, site_condition)
        values (#{report_id}, #{describes}, #{picurl}, #{operate_plan}, #{create_time}, #{validation}, #{site_condition})
    </insert>

    <update id="update_report_info">
        update report
        set describes = #{describes}, picurl = #{picurl}, operate_plan = #{operate_plan}, create_time = #{create_time}, validation = #{validation}, site_condition = #{site_condition}
        where report_id = #{report_id}
    </update>

    <select id="get_report_by_report_id" resultType="com.example.demo.entity.Report">
        select * from report
        where report_id = #{report_id}
    </select>

</mapper>